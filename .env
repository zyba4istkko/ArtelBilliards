# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/artel_billiards
DATABASE_URL_TEST=postgresql://postgres:password@localhost:5432/artel_billiards_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_URL_TEST=redis://localhost:6379/1

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:password@localhost:5672
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=password

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
ENVIRONMENT=development
DEBUG=true
API_VERSION=v1
APP_NAME=Artel Billiards
APP_DESCRIPTION=Billiards game management application

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001

# Telegram Mini Apps Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram/webhook

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/ws

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH=uploads/

# Cache Configuration
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Background Tasks Configuration
WORKER_CONCURRENCY=4
TASK_TIMEOUT=300  # 5 minutes

# Development Configuration
RELOAD=true
HOT_RELOAD=true

# Testing Configuration
TESTING=false
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/artel_billiards_test

# Security Configuration
SECRET_KEY=your-secret-key-for-sessions
BCRYPT_ROUNDS=12

# PostgreSQL Configuration
POSTGRES_DB=artel_billiards
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Docker Configuration
COMPOSE_PROJECT_NAME=artel-billiards